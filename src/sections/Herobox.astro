---
import { Image } from "astro:assets";
import DoubleArrow from "../../public/icons/Double-arrow.svg"

---

<style lang="scss">
    .herobox {
        height: 80dvh;
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        position: relative;
        overflow: hidden;
        background-color: #EFEFEF;
        z-index: 1;

        h1 {
            font-size: 4rem;
            text-align: center;
            line-height: 4.8rem;
            position: relative;
            z-index: 2;
            font-weight: 300;
            letter-spacing: -0.5px;
            padding: 0 1.4rem;
        }

        a.free-consulting{
            background-color: #1B1B1B;
            display: flex;
            align-items: center;
            margin-top: 6.4rem;
            border-radius: 0.4rem;
            z-index: 100;
            p{
                padding: 1.6rem;
                color: #C6C6C6;
                border-right: 1px solid #3A3A3A;
                font-size: 1.2rem;
                line-height: 2.2rem;
            }

            img{
                margin: 1.6rem;
                z-index: 100;
            }


        }

        p.final-text{
            text-align: center;
            margin-top: 3.2rem;
            font-size: 1.6rem;
            font-weight: 300;
        }



        .hero-bg {
            display: flex;
            position: absolute;
            bottom: 0;
            align-items: end;
            z-index: -1;

            >* {
                // border: 1px solid #D0D0D0;
                // border-bottom: 0px;
                height: 110vh;
                width: 180px;
                // transform-origin: center;
                outline: 1px #D9D9D9 solid;
                /* inner stroke */
                outline-offset: -0.5px;
                /* negative border width + outline width */

            }
        }

    }

    @media screen and (min-width: 900px) {
        .herobox {
            h1 {
                font-size: 9.6rem;
            }
        }
    }
</style>


<div class="herobox">
    <h1 class="heading">Improve the quality and performance of your digital presence.</h1>

    <a href="/" class="free-consulting">
        <p>FREE CONSULTING</p>
        <Image src={DoubleArrow} alt="double arrow"></Image>
    </a>

    <p class="final-text">A dedicated team of developers are waiting to launch, accelerate and support your business</p>

    <div class="hero-bg">

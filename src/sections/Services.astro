---
import { Image } from "astro:assets";
import DoubleArrow from "../icons/DoubleArrow.svg"
import Development from "../images/development.svg"
import DigitalDesign from "../images/digital-design.svg"
import LeadGeneration from "../images/lead-generation.svg"


---

<style lang="scss">
    .container {
        .head {
            margin: 1.6rem 1.4rem;
            font-size: 2.4rem;
            color: #c6c6c6;
        }

        hr {
            width: 100vw;
            border: 0.5px solid #3a3a3a;
        }

        .container-intro {
            margin: 3.2rem 1.6rem 6.4rem 1.6rem;

            h2 {
                font-size: 4rem;
                color: #efefef;
                letter-spacing: -0.5px;
                font-weight: 300;
            }

            p {
                margin-top: 3.2rem;
                font-size: 1.6rem;
                color: #909090;
                font-weight: 300;
            }
        }

        .container-content{
            display: none;
        }
    }

    @media screen and (min-width: 600px) {
        .container {
            .container-intro {
                h2 {
                    font-size: 6rem;
                    line-height: 7.2rem;
                }
            }
        }
    }

    @media screen and (min-width: 900px) {
        .container {
            .head {
                margin: 1.6rem 4.6rem;
            }

            .container-intro {
                margin: 9.6rem 4.6rem;
                width: max-content;
                width: 880px;

                h2 {
                    margin-top: 9.6rem;
                    font-size: 6.4rem;
                }
            }

            .container-content{
                display: flex;
                gap: 3.2rem;
                padding: 0 7.6rem;
                margin-bottom: 6.4rem;
                .card{
                    padding: 2.4rem 1.6rem;
                    background-color: #151518;
                    border-radius: 0.8rem;

                    p{
                        color: #F3F3F3;
                    }

                    img{
                        margin-bottom: 6.4rem;
                        width: 100%;
                        height: auto;
                    }

                    p.title{
                        font-size: 3rem;
                        line-height: 4rem;
                        margin-bottom: 3.2rem;
                    }

                    p.description{
                        color: #9F9F9F;
                        font-size: 1.6rem;
                        line-height: 2.4rem;
                        margin-bottom: 6.4rem;
                    }


                    .card-footer{
                        display: flex;
                        align-items: center;
                        justify-content: space-between;
                        .card-footer-text{
                            color: #6B6B6B;
                            font-size: 1.2rem;
                            line-height: 2rem;
                        }
                        .card-footer-button{
                            display: flex;
                            align-items: center;
                            border: 1px solid #3A3A3A;
                            justify-content: space-around;
                            border-radius: 4px;
      

                            p.number{
                                border-right: 1px solid #3A3A3A;
                                padding: 0.3rem;
                                color: #6B6B6B;
                                font-size: 1.4rem;
                            }
                            img{
                                margin: 0.3rem;
                            }
                        }
                    }

                }
            }
        }
    }
</style>

<div class="container">
    <h2 class="head">Nakecode Services</h2>
    <hr />

    <div class="container-intro">
        <h2 class="optimize-text">A one-stop agency for your online brand</h2>
        <p>Services that work together to convert deals</p>
    </div>

    <div class="container-content">
        <div class="card">
            <Image class="card-image" src={Development} alt="placeholder"></Image>
            <p class="title">Development</p>
            <p class="description">Build with the technology that best suits your project to achieve your goals within your budget</p>
            <div class="card-footer">
                <p class="card-footer-text">WEB/APP DEVELOPMENT</p>
                <div class="card-footer-button">
                    <p class="number">01</p>
                    <Image src={DoubleArrow} alt="Double Arrow Icon"></Image>
                </div>
            </div>
        </div>
        <div class="card">
            <Image class="card-image" src={DigitalDesign} alt="placeholder"></Image>
            <p class="title">Digital Design</p>
            <p class="description">Get visually appealing designs and animations to ensure the highest conversion rate for your business</p>
            <div class="card-footer">
                <p class="card-footer-text">UI/UX & ASSETS</p>
                <div class="card-footer-button">
                    <p class="number">02</p>
                    <Image src={DoubleArrow} alt="Double Arrow Icon"></Image>
                </div>
            </div>
        </div>
        <div class="card">
            <Image class="card-image" src={LeadGeneration} alt="placeholder"></Image>
            <p class="title">Lead Generation</p>
            <p class="description">Increase your digital exposure and raise your positioning through ads campaigns and content creation</p>
            <div class="card-footer">
                <p class="card-footer-text">ADS & SEO</p>
                <div class="card-footer-button">
                    <p class="number">03</p>
                    <Image src={DoubleArrow} alt="Double Arrow Icon"></Image>
                </div>
            </div>
        </div>
    </div>
</div>

